<!doctype html>
<html lang="en" ng-app="angularGallery">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Image Gallery</title>
    <% include ../partials/head.ejs %>
</head>
<body ng-controller="loginCtrl">
    <% include ../partials/navMini.ejs %>
    <div class="container">
        <h4>Login</h4>
        <div class="alert alert-dismissible fade" id="ajax-msg" role="alert">
            <span>{{ msgText }}</span>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <form action="">
        <div class="card card-login mx-auto">
            <div class="card-header">Acceso Usuarios</div>
            <div class="card-body">
                <div class="progress fade">
                    <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%"></div>
                </div>
                <div class="container">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Nombre Usuario" ng-model="_username">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" placeholder="ContraseÃ±a" ng-model="_userpassword">
                    </div>
                    <div class="d-flex justify-content-end card-buttons">
                        <button type="button" class="btn btn-outline-dark">Cancel</button>
                        <button type="submit" class="btn btn-primary submit"  ng-click="login()">Submit</button>
                    </div>
                </div>
            </div>
        </div>
        </form>
    </div>
    <% include ../partials/footer.ejs %>
    <% include ../partials/javascripts.ejs %>
    <script src="controllers/loginCtrl.js"></script>
</body>
</html>